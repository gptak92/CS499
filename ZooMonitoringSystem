           System.out.println("Name: " + name);
           System.out.println("Age: " + age);
           System.out.println("Health concerns: " + healthConcerns);
           System.out.println("Feeding schedule: " + feedingSchedule);
           }

         
         public static void printPenguinHabitat() {      //Creating method to call for Penguin Habitat Module in main method
             String habitat;
             String temperature;
             String foodSource;
             String cleanliness;
             
             habitat = "Penguin";                    //Assigning characteristics to Penguin Habitat
             temperature = "Freezing";
             foodSource = "*****Food source: Fish in water running low";
             cleanliness = "Passed";
             
             System.out.println("Details on penguin habitat");       //Displays Penguin Habitat Module
             System.out.println("Habitat - " + habitat);
             System.out.println("Temperature: " + temperature);
             System.out.println("Food source: " + foodSource);
             System.out.println("Cleanliness: " + cleanliness);
         }
         public static void printBirdHouse() {                   //Creating method to call for Bird House Module in main method
             String habitat;
             String temperature;
             String foodSource;
             String cleanliness;
             
             habitat = "Bird";                       // Assigning characteristics to Bird House
             temperature = "Moderate";
             foodSource = "Natural from environment";
             cleanliness = "Passed"; 
             
             System.out.println("Details on bird house");        // Displays Bird House Module
             System.out.println("Habitat - " + habitat);
             System.out.println("Temperature: " + temperature);
             System.out.println("Food source: " + foodSource);
             System.out.println("Cleanliness: " + cleanliness);
         }
         public static void printAquarium() {        //Creating method to call for Aquarium Module in main method
             String habitat;
             String temperature;
             String foodSource;
             String cleanliness;
             
             habitat = "Aquarium";                   // Assign characteristics to Aquarium
             temperature = "Varies with output temperature";
             foodSource = "Added daily";
             cleanliness = "*****Cleanliness: Needs cleaning from algae";
             
             System.out.println("Details on aquarium");      // Displays Aquarium Module
             System.out.println("Habitat - " + habitat);
             System.out.println("Temperature: " + temperature);
             System.out.println("Food source: " + foodSource);
             System.out.println("Cleanliness: " + cleanliness);
         }
         public static void printGreenhouse() {        //Creating method to call for Greenhouse Module in main method
             String habitat;
             String temperature;
             String foodSource;
             String cleanliness;
             
             habitat = "Greenhouse";                   // Assign characteristics to Greenhouse
             temperature = "***Needs temperature regulating";
             foodSource = "Added daily";
             cleanliness = "*****Cleanliness: Needs watering of plants and slight clean up";
             
             System.out.println("Details on Greenhouse");      // Displays Greenhouse Module
             System.out.println("Habitat - " + habitat);
             System.out.println("Temperature: " + temperature);
             System.out.println("Food source: " + foodSource);
             System.out.println("Cleanliness: " + cleanliness);
         }
         public static void printDesert() {        //Creating method to call for Desert Module in main method
             String habitat;
