package ZooMonitoringSystem;
import java.util.Scanner;

public class ZooMonitoringSystem {
	 public static void printLion() {            // Creating method to call for Lion Module in main method
         String animal;
         String name;
         int age;
         String healthConcerns;
         String feedingSchedule;
         
          animal = "Lion";                       //Assigning characteristics to Lion
          name = "Leo";
          age = 5;
          healthConcerns = "*****Health concerns: Cut on left front paw";
          feedingSchedule = "Feeding schedule: Twice daily";
        
          System.out.println("Details on lions");        //Displays Lion Module
          System.out.println("Animal - " + animal);
          System.out.println("Name: " + name);
          System.out.println("Age: " + age);
          System.out.println("Health concerns: " + healthConcerns);
          System.out.println("Feeding schedule: " + feedingSchedule);
      }
      public static void printTiger() {          //Creating method to call for Tiger Module in main method
         String animal;
         String name;
         int age;
         String healthConcerns;
         String feedingSchedule;
          
          animal = "Tiger";                      //Assigning characteristics to Tiger
          name = "Maj";
          age = 15;
          healthConcerns = "None";
          feedingSchedule = "3x daily";
          
          System.out.println("Details on tigers");       //Displays Tiger Module
