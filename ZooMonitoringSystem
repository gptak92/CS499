             System.out.println("Details on Desert");      // Displays Desert Module
             System.out.println("Habitat - " + habitat);
             System.out.println("Temperature: " + temperature);
             System.out.println("Food source: " + foodSource);
             System.out.println("Cleanliness: " + cleanliness);
         }
         public static void printMonkeyHouse() {        //Creating method to call for Monkey House Module in main method
             String habitat;
             String temperature;
             String foodSource;
             String cleanliness;
             
             habitat = "Monkey House";                   // Assign characteristics to Monkey House
             temperature = "Moderate";
             foodSource = "Added daily";
             cleanliness = "*****Cleanliness: Needs cleaning and new toys to be added";
             
             System.out.println("Details on Monkey House");      // Displays Monkey House Module
             System.out.println("Habitat - " + habitat);
             System.out.println("Temperature: " + temperature);
             System.out.println("Food source: " + foodSource);
             System.out.println("Cleanliness: " + cleanliness);
         }

	public static void main(String[] args) {
		String userInput;                      //Strings to store user input
        String userInput1;
        Scanner scnr = new Scanner(System.in);     //Allows to scan for user input
        
        System.out.println("Hello! Welcome to the zoo monitoring system!");            //Main welcome message
        System.out.println("Please choose between selecting an Animal or a Habitat");
        System.out.println("To choose, please type in \"Animal\" for Animal or \"Habitat\" for Habitat");
        System.out.println("To exit, type in \"Exit\"");
        userInput = scnr.nextLine();                           //Scans for user input
        
        if (userInput.equals("Animal")) {                      //If user types in Animal
           System.out.println("Please select an Animal");      //Displays further dialogue
           System.out.println("Please note that if any module displays \"*****\" next to a characteristic, this is meant to bring awareness of an issue to the user");
           System.out.println("Please type in one of these options: ");
           System.out.println("Lion, Tiger, Bear, Giraffe, Penguin, Wolf, or Snake ");
           userInput1 = scnr.nextLine();                       //Scans for user input
           
           if (userInput1.equals("Lion")) {                    //If user types Lion
               printLion();                                    //Calls Lion method to display Lion module
           }
           if (userInput1.equals("Tiger")) {                   //If user types Tiger 
               printTiger();                                   //Calls Tiger method to display Tiger module
           }
           if (userInput1.equals("Bear")) {                    //If user types Bear
               printBear();                                    //Calls Bear method to display Bear module
           }
           if (userInput1.equals("Giraffe")) {                 //If user types Giraffe        
               printGiraffe();    								//Calls Giraffe method to display Giraffe module
           }
           if (userInput1.equals("Penguin")) {					//If user types Penguin
        	   printPenguin();									//Calls Penguin method to display Penguin module
           }
           if (userInput1.equals("Wolf")) {						//If user types Wolf
        	   printWolf();										//Calls Wolf method to display Wolf module
           }
           if (userInput1.equals("Snake")) {					//If user types Snake
        	   printSnake();									//Calls Snake method to display SNake module
           }
           
           else {                                              //If none of the above is selected
           }
           System.out.println("Go back");                      //Prints go back
        }
        if (userInput.equals("Habitat")) {                     //If user types Habitat
            System.out.println("Please select a Habitat");     //Displays further dialogue
            System.out.println("Please note that if any module displays \"*****\" next to a characteristic, this is meant to bring awareness of an issue to the user");
            System.out.println("Please type in one of these options: ");
            System.out.println("Penguin Habitat, Bird House, Aquarium, Greenhouse, Desert, or Monkey House");
            userInput1 = scnr.nextLine();                      //Scans for user input
            
            if (userInput1.equals("Penguin Habitat")) {        //If user types Penguin Habitat
                printPenguinHabitat();                         //Calls Penguin Habitat method to display Penguin Habitat module
            }
            if (userInput1.equals("Bird House")) {             //If user types Bird House
                printBirdHouse();                              //Calls Bird House method to display Bird House module
            }
            if (userInput1.equals("Aquarium")) {               //If user types Aquarium
                printAquarium();                               //Calls Aquarium method to display Aquarium module
            }
            if (userInput1.equals("Greenhouse")) {				//If user types Greenhouse
            	printGreenhouse();								//Calls Greenhouse method to display Greenhouse module
            }
            if (userInput1.equals("Desert")) {					//If user types Desert
            	printDesert();									//Calls Desert method to display Desert module
            }
            if (userInput1.equals("Monkey House")) {			//If user types Monkey House
            	printMonkeyHouse();								//Calls Monkey House method to display Monkey House module
            }
            else {                                             //If none of the above is selected
            }
            System.out.println("Go back");                     //Prints go back
            

	}
	}

}


